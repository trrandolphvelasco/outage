extends ./layout/layout.pug

block content
  
  table(cellpadding='0', cellspacing='0', width='100%', border='0')
    tr
      td(align='center', style='font-family:Arial, Helvetica, sans-serif; color: #049900; font-size: 14px; padding-top: 14px;')
        span(contenteditable='true', style='display:block;') ToolTwist QA
      //- td
    //- tr
    tr
      td(align='center', style='font-family:Arial, Helvetica, sans-serif; color: #049900; font-size: 18px; padding-top: 12px;')
        span(contenteditable='true', style='display:block; padding: 0 20px;') Release Run Sheet
      //- td
    //- tr
    tr
      td(align='center', valign='middle', style='padding: 10px 0;')
        //- render logo
        if xlogo
          +logo(url)
          +logo(url2)
        else
          +logo(url)
        //- render logo
      //- td
    //- tr
    tr
      td(height='2')
        div(style='margin: 0 2px; background:#e2e2e2; height: 1px;')
        div(style='margin: 0 2px; background:#FFFFFF; height: 1px;')
      //- td
    //- tr
    tr
      td(style='padding: 15px 20px; color:#3e3d3d; font-family:Arial, Helvetica, sans-serif; font-size: 12px;')
        table(width='100%', cellpadding='5', cellspacing='0', border='0')
          tr
            td(width='150', valign='top')
              strong Date &amp; Time
            //- td
            td(width='35', align='left', valign='top')
              | :
            //- td
            td(width='', valign='top')
              span(contenteditable='true', style='display:block;')
                | --
              //- span
            //- td
          //- tr
          tr
            td(valign='top')
              strong Product
            //- td
            td(align='left', valign='top')
              | :
            //- td
            td(valign='top')
              span(contenteditable='true', style='display:block;')
                | --
              //- span
            //- td
          //- tr
          tr
            td(valign='top')
              strong JIRA/Redmine Numbers
            //- td
            td(align='left', valign='top')
              | :
            //- td
            td(valign='top')
              span(contenteditable='true', style='display:block;')
                | --
              //- span
            //- td
          //- tr
          tr
            td(valign='top')
              strong Image
            //- td
            td(align='left', valign='top')
              | :
            //- td
            td(valign='top')
              span(contenteditable='true', style='display:block;')
                | --
              //- span
            //- td
          //- tr
          tr
            td(valign='top', colspan='3')
              span(contenteditable='true', style='display:block; color: red;')
                | Note:  This run sheet is a rough guidance only. Infrastructure and DBA teams are to read and vet the runsheet and feedback depending on target environments and release approvals.
              //- span
            //- td
          //- tr
          tr
            td(valign='top', colspan='3')
              span(contenteditable='true', style='display:block;')
                | PASTE RUN SHEET HERE!
              //- span
            //- td
          //- tr
        //- table
      //- td
    //- tr
  //- table
